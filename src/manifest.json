{
  "manifest_version": 2,
  "name": "aTab",
  "version": "0.2.2",
  "description": "Save tabs for later.",
  "author": "Artur Dorovskikh",
  "icons": {
    "16": "assets/icons/a48_reduced_16.png",
    "48": "assets/icons/a48.png",
    "128": "assets/icons/a512.png"
  },
  "background" : {
    "scripts": [
      "assets/scripts/dexie-2.0.4.js",
      "assets/scripts/vue-2.5.17.js",
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "store-selected": {
      "description": "store_selected",
      "suggested_key": {
        "windows": "Ctrl+Shift+Down"
      }
    },
    "store-right": {
      "description": "store_right",
      "suggested_key": {
        "windows": "Ctrl+Shift+Right"
      }
    },
    "store-all": {
      "description": "store_all",
      "suggested_key": {
        "windows": "Ctrl+Shift+Up"
      }
    },
    "store-left": {
      "description": "store_left",
      "suggested_key": {
        "windows": "Ctrl+Shift+Left"
      }
    },
    "open-list": {
      "description": "open_list"
    }
  },
  "browser_action": {
    "default_title": "aTab",
    "default_popup": "popup.html"
  },
  "permissions": [
  "storage",
  "contextMenus",
  "tabs",
  "history"
   ],
   "homepage_url": "https://github.com/ArtDor2/aTab",
   "offline_enabled": true,
   "options_page": "options.html",
   "options_ui":
   {
     "page": "options.html",
     "open_in_tab": true
   }
}